@model Inmobiliaria_Zarate_DoNet.Models.Usuario
@{
    ViewData["Title"] = "Eliminar usuario";
}
<partial name="~/Views/Shared/_Alertas.cshtml" />

<h2>Eliminar usuario</h2>
<p class="text-danger">¿Confirmás eliminar este usuario?</p>

<dl class="row">
    <dt class="col-sm-3">Apellido</dt><dd class="col-sm-9">@Model.Apellido</dd>
    <dt class="col-sm-3">Nombre</dt><dd class="col-sm-9">@Model.Nombre</dd>
    <dt class="col-sm-3">Email</dt><dd class="col-sm-9">@Model.Email</dd>
    <dt class="col-sm-3">Rol</dt><dd class="col-sm-9">@Model.Rol</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancelar</a>
</form>
