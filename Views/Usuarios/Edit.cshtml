@model Inmobiliaria_Zarate_DoNet.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Apellido"></label>
        <input asp-for="Apellido" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Rol"></label>
        <select asp-for="Rol" asp-items="Html.GetEnumSelectList<Rol>()" class="form-control"></select>
    </div>

    <div class="form-group form-check">
        <input asp-for="Activo" class="form-check-input" />
        <label asp-for="Activo" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
