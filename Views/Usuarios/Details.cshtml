@model Inmobiliaria_Zarate_DoNet.Models.Usuario
@{
    ViewData["Title"] = "Detalle de usuario";
    var esAdmin = (Context.Session.GetString("UserRol") ?? "") == "ADMIN";
}
<partial name="~/Views/Shared/_Alertas.cshtml" />

<h2>Detalle de usuario</h2>

<dl class="row">
    <dt class="col-sm-3">Apellido</dt><dd class="col-sm-9">@Model.Apellido</dd>
    <dt class="col-sm-3">Nombre</dt><dd class="col-sm-9">@Model.Nombre</dd>
    <dt class="col-sm-3">Email</dt><dd class="col-sm-9">@Model.Email</dd>
    <dt class="col-sm-3">Rol</dt><dd class="col-sm-9">@Model.Rol</dd>
    <dt class="col-sm-3">Activo</dt><dd class="col-sm-9">@((Model.Activo) ? "SÃ­" : "No")</dd>
</dl>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    @if (esAdmin)
    {
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Borrar</a>
    }
</div>
