@model Inmobiliaria_Zarate_DoNet.Models.Usuario
@{
    ViewData["Title"] = "Nuevo usuario";
}
<partial name="~/Views/Shared/_Alertas.cshtml" />

<h2>Nuevo usuario</h2>

<form asp-action="Create" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    @* Campos b치sicos *@
    <div class="mb-3">
        <label asp-for="Apellido" class="form-label"></label>
        <input asp-for="Apellido" class="form-control" />
        <span asp-validation-for="Apellido" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    @* Passwords s칩lo en Create *@
    <div class="mb-3">
        <label class="form-label">Contrase침a</label>
        <input name="Password" type="password" class="form-control" />
        <span class="text-danger">@Html.ValidationMessage("Password")</span>
    </div>
    <div class="mb-3">
        <label class="form-label">Repetir contrase침a</label>
        <input name="PasswordRepetir" type="password" class="form-control" />
        <span class="text-danger">@Html.ValidationMessage("PasswordRepetir")</span>
    </div>

    <div class="mb-3">
        <label asp-for="Rol" class="form-label"></label>
        <select asp-for="Rol" class="form-select" asp-items="Html.GetEnumSelectList<Inmobiliaria_Zarate_DoNet.Models.Rol>()"></select>
        <span asp-validation-for="Rol" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input asp-for="Activo" class="form-check-input" />
        <label asp-for="Activo" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
