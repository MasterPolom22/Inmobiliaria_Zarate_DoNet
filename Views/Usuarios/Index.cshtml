@model IEnumerable<Inmobiliaria_Zarate_DoNet.Models.Usuario>
@using Inmobiliaria_Zarate_DoNet.Utils

@{
    var rol = Context.Session.GetString(SessionKeys.UserRol);
    ViewData["Title"] = "Usuarios";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Usuario</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Activo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.Email</td>
                <td>@item.Rol</td>
                <td>@(item.Activo ? "SÃ­" : "No")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Ver</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    @if (rol == "ADMIN")
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Borrar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>