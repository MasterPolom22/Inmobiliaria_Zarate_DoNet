@model IEnumerable<Inmobiliaria_Zarate_DoNet.Models.Usuario>
@{
    ViewData["Title"] = "Usuarios";
    var esAdmin = (Context.Session.GetString("UserRol") ?? "") == "ADMIN";
}
<partial name="~/Views/Shared/_Alertas.cshtml" />

<h2>Usuarios</h2>

@if (esAdmin)
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Nuevo usuario</a>
    </p>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Activo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var u in Model)
{
        <tr>
            <td>@u.Apellido</td>
            <td>@u.Nombre</td>
            <td>@u.Email</td>
            <td>@u.Rol</td>
            <td>@(u.Activo ? "SÃ­" : "No")</td>
            <td class="text-end">
                <a asp-action="Details" asp-route-id="@u.Id" class="btn btn-outline-secondary btn-sm">Ver</a>
                <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-outline-primary btn-sm">Editar</a>
                @if (esAdmin)
                {
                    <a asp-action="Delete" asp-route-id="@u.Id" class="btn btn-outline-danger btn-sm">Borrar</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
