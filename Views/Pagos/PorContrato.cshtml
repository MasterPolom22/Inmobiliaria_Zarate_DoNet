@model IEnumerable<Inmobiliaria_Zarate_DoNet.Models.Pago>
@{
    ViewData["Title"] = "Pagos del contrato";
    var contratoId = (int)ViewBag.ContratoId;
}
<h2>@ViewData["Title"] #@contratoId</h2>

<p>
    <a asp-action="Create" asp-route-contratoId="@contratoId" class="btn btn-primary">Nuevo pago</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>NÂ°</th>
            <th>Fecha</th>
            <th>Detalle</th>
            <th>Importe</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var p in Model)
    {
        <tr class="@(p.Anulado ? "table-danger" : "")">
            <td>@p.Numero</td>
            <td>@p.Fecha.ToShortDateString()</td>
            <td>@p.Detalle</td>
            <td>@p.Importe.ToString("C")</td>
            <td>@(p.Anulado ? "ANULADO" : "OK")</td>
            <td>
                <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-info btn-sm">Ver</a>
                @if (!p.Anulado) {
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-warning btn-sm">Editar</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
