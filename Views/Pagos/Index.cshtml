@model IEnumerable<Inmobiliaria_Zarate_DoNet.Models.Pago>
@{
    ViewData["Title"] = "Pagos";
    var contratoId = (int)ViewBag.ContratoId;
    string resumen = ViewBag.ContratoResumen as string ?? "";
}
<h2>Pagos</h2>
@if (!string.IsNullOrEmpty(resumen))
{
    <p><strong>Contrato:</strong> @resumen</p>
}
<p>
    <a asp-action="Create" asp-route-contratoId="@contratoId" class="btn btn-primary">+ Nuevo Pago</a>
    <a asp-controller="Contratos" asp-action="Details" asp-route-id="@contratoId" class="btn btn-secondary">Volver al contrato</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>N°</th>
            <th>Fecha</th>
            <th>Detalle</th>
            <th>Importe</th>
            <th>Anulado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Numero</td>
            <td>@p.Fecha.ToString("yyyy-MM-dd")</td>
            <td>@p.Detalle</td>
            <td>@p.Importe.ToString("N2")</td>
            <td>@(p.Anulado ? "Sí" : "No")</td>
            <td>
                <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-info btn-sm">Ver</a>
                @if (!p.Anulado)
                {
                    <a asp-action="Anular" asp-route-id="@p.Id" class="btn btn-danger btn-sm">Anular</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
