@model IEnumerable<Inmobiliaria_Zarate_DoNet.Models.Pago>
@{
    ViewData["Title"] = "Pagos";
    var contratoId = (int)(ViewBag.ContratoId ?? 0);
    var resumen = (string)(ViewBag.ContratoResumen ?? "");
}
<partial name="~/Views/Shared/_Alertas.cshtml" />

<h2>Pagos</h2>
@if (!string.IsNullOrEmpty(resumen))
{
    <p class="text-muted mb-2">@resumen</p>
}

<p>
    <a asp-action="Create" asp-route-contratoId="@contratoId" class="btn btn-primary">Nuevo pago</a>
    <a asp-controller="Contratos" asp-action="Details" asp-route-id="@contratoId" class="btn btn-secondary">Volver al contrato</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Fecha</th>
            <th>Detalle</th>
            <th class="text-end">Importe</th>
            <th>Anulado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var p in Model)
{
        <tr>
            <td>@p.Numero</td>
            <td>@p.Fecha.ToString("dd/MM/yyyy")</td>
            <td>@p.Detalle</td>
            <td class="text-end">@p.Importe.ToString("C")</td>
            <td>@(p.Anulado ? "SÃ­" : "No")</td>
            <td class="text-end">
                <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-outline-secondary btn-sm">Ver</a>
                @if (!p.Anulado)
                {
                    <a asp-action="Anular" asp-route-id="@p.Id" class="btn btn-outline-danger btn-sm">Anular</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
