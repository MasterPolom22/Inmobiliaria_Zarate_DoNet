@model IEnumerable<Inmobiliaria_Zarate_DoNet.Models.Pago>
@using Inmobiliaria_Zarate_DoNet.Utils
@{
    ViewData["Title"] = "Pagos del contrato";
    var rol = Context.Session.GetString(SessionKeys.UserRol);
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}

<p>
    <a asp-action="Create" asp-route-contratoId="@ViewBag.ContratoId" class="btn btn-primary">
        Nuevo Pago
    </a>
    <a asp-controller="Contratos" asp-action="Details" asp-route-id="@ViewBag.ContratoId" class="btn btn-secondary">
        Volver al contrato
    </a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>NÃºmero</th>
            <th>Fecha</th>
            <th>Importe</th>
            <th>Detalle</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Numero</td>
            <td>@p.Fecha.ToShortDateString()</td>
            <td>@p.Importe.ToString("C")</td>
            <td>@p.Detalle</td>
            <td>@(p.Anulado ? "Anulado" : "Activo")</td>
            <td>
                <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-info btn-sm">Ver</a>
                @if (rol == "ADMIN" && !p.Anulado)
                {
                    <a asp-action="Anular" asp-route-id="@p.Id" class="btn btn-danger btn-sm">Anular</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
