@model Inmobiliaria_Zarate_DoNet.Models.Pago
@{
    ViewData["Title"] = "Detalle de pago";
}
<partial name="~/Views/Shared/_Alertas.cshtml" />

<h2>Detalle de pago</h2>
@if (!string.IsNullOrEmpty(Model.ContratoResumen))
{
    <p class="text-muted mb-2">@Model.ContratoResumen</p>
}

<dl class="row">
    <dt class="col-sm-3">Número</dt><dd class="col-sm-9">@Model.Numero</dd>
    <dt class="col-sm-3">Fecha</dt><dd class="col-sm-9">@Model.Fecha.ToString("dd/MM/yyyy")</dd>
    <dt class="col-sm-3">Detalle</dt><dd class="col-sm-9">@Model.Detalle</dd>
    <dt class="col-sm-3">Importe</dt><dd class="col-sm-9">@Model.Importe.ToString("C")</dd>
    <dt class="col-sm-3">Anulado</dt><dd class="col-sm-9">@((Model.Anulado) ? "Sí" : "No")</dd>
</dl>

<div class="mt-3">
    <a asp-action="Index" asp-route-contratoId="@Model.ContratoId" class="btn btn-secondary">Volver</a>
    @if (!Model.Anulado)
    {
        <a asp-action="Anular" asp-route-id="@Model.Id" class="btn btn-danger">Anular</a>
    }
</div>
