@model Inmobiliaria_Zarate_DoNet.Models.Pago
@using Inmobiliaria_Zarate_DoNet.Utils
@{
    ViewData["Title"] = "Detalle de pago";
    var rol = Context.Session.GetString(SessionKeys.UserRol);
}
<h2>@ViewData["Title"]</h2>

<dl class="row">
    <dt class="col-sm-2">Contrato</dt><dd class="col-sm-10">@Model.ContratoId</dd>
    <dt class="col-sm-2">N°</dt><dd class="col-sm-10">@Model.Numero</dd>
    <dt class="col-sm-2">Fecha</dt><dd class="col-sm-10">@Model.Fecha.ToShortDateString()</dd>
    <dt class="col-sm-2">Detalle</dt><dd class="col-sm-10">@Model.Detalle</dd>
    <dt class="col-sm-2">Importe</dt><dd class="col-sm-10">@Model.Importe.ToString("C")</dd>
    <dt class="col-sm-2">Estado</dt><dd class="col-sm-10">@(Model.Anulado ? "ANULADO" : "OK")</dd>
</dl>

@if (rol == "ADMIN")
{
    <hr />
    <h5>Auditoría</h5>
    <dl class="row">
    <dt class="col-sm-3">Creado por</dt>
    <dd class="col-sm-9">
        @(Model.CreadoPorNombre ?? $"Usuario #{Model.CreadoPorId}")
    </dd>

    <dt class="col-sm-3">Anulado por</dt>
    <dd class="col-sm-9">
        @if (Model.AnuladoPorId == null) {
            <span class="text-muted">—</span>
        } else {
            @(Model.AnuladoPorNombre ?? $"Usuario #{Model.AnuladoPorId}")
        }
    </dd>

    <dt class="col-sm-3">Fecha de creado</dt>
    <dd class="col-sm-9">@Model.CreadoEn</dd>
</dl>
}

<div class="mt-3">
    @if (!Model.Anulado)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
        @if (rol == "ADMIN")
        {
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Anular</a>
        }
    }
    <a asp-action="PorContrato" asp-route-contratoId="@Model.ContratoId" class="btn btn-secondary">Volver</a>
</div>
