@model Inmobiliaria_Zarate_DoNet.Models.Pago
@{
    ViewData["Title"] = "Detalle de Pago";
}
<h2>Detalle de Pago</h2>

<dl class="row">
    <dt class="col-sm-3">Contrato</dt>
    <dd class="col-sm-9">@Model.ContratoResumen</dd>

    <dt class="col-sm-3">Número</dt>
    <dd class="col-sm-9">@Model.Numero</dd>

    <dt class="col-sm-3">Fecha</dt>
    <dd class="col-sm-9">@Model.Fecha.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-3">Detalle</dt>
    <dd class="col-sm-9">@Model.Detalle</dd>

    <dt class="col-sm-3">Importe</dt>
    <dd class="col-sm-9">@Model.Importe.ToString("N2")</dd>

    <dt class="col-sm-3">Anulado</dt>
    <dd class="col-sm-9">@(Model.Anulado ? "Sí" : "No")</dd>

    @if (Model.AnuladoPor.HasValue)
    {
        <dt class="col-sm-3">Anulado por</dt>
        <dd class="col-sm-9">@Model.AnuladoPor</dd>
    }

    <dt class="col-sm-3">Creado por</dt>
    <dd class="col-sm-9">@Model.CreadoPor</dd>

    <dt class="col-sm-3">Creado en</dt>
    <dd class="col-sm-9">@Model.CreadoEn</dd>
</dl>

<p>
    @if (!Model.Anulado)
    {
        <a asp-action="Anular" asp-route-id="@Model.Id" class="btn btn-danger">Anular</a>
    }
    <a asp-action="Index" asp-route-contratoId="@Model.ContratoId" class="btn btn-secondary">Volver</a>
</p>
