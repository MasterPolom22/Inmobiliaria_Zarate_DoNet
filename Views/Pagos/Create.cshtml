@model Inmobiliaria_Zarate_DoNet.Models.Pago
@{
    ViewData["Title"] = "Nuevo pago";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ContratoId" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Fecha"></label>
        <input asp-for="Fecha" type="date" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Detalle"></label>
        <input asp-for="Detalle" class="form-control" placeholder="Mes x / Abono mayo..." />
        <span asp-validation-for="Detalle" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Importe"></label>
        <input asp-for="Importe" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Importe" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Guardar</button>
    <a asp-action="PorContrato" asp-route-contratoId="@Model.ContratoId" class="btn btn-secondary">Volver</a>
</form>
