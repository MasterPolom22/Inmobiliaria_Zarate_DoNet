@model Inmobiliaria_Zarate_DoNet.Models.Pago
@{
    ViewData["Title"] = "Nuevo Pago";
}
<h2>Registrar Pago</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="ContratoId" />

    <div class="row g-3">
        <div class="col-md-3">
            <label asp-for="Fecha" class="form-label">Fecha</label>
            <input asp-for="Fecha" type="date" class="form-control" />
            <span asp-validation-for="Fecha" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="Importe" class="form-label">Importe</label>
            <input asp-for="Importe" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Importe" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Detalle" class="form-label">Detalle</label>
            <input asp-for="Detalle" class="form-control" maxlength="200" />
            <span asp-validation-for="Detalle" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label class="form-label">Número</label>
            <input class="form-control" value="Se asignará al guardar" disabled />
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Guardar</button>
        <a asp-action="Index" asp-route-contratoId="@Model.ContratoId" class="btn btn-secondary">Volver</a>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
