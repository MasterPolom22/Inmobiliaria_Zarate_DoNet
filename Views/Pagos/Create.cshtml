@model Inmobiliaria_Zarate_DoNet.Models.Pago
@{
    ViewData["Title"] = "Nuevo pago";
}
<partial name="~/Views/Shared/_Alertas.cshtml" />

<h2>Nuevo pago</h2>

<form asp-action="Create" method="post"  class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ContratoId" />

    <div class="mb-3">
        <label asp-for="Fecha" class="form-label"></label>
        <input asp-for="Fecha" type="date" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Detalle" class="form-label"></label>
        <input asp-for="Detalle" class="form-control" maxlength="200" />
        <span asp-validation-for="Detalle" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Importe" class="form-label"></label>
        <input asp-for="Importe" class="form-control" />
        <span asp-validation-for="Importe" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" asp-route-contratoId="@Model.ContratoId" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
