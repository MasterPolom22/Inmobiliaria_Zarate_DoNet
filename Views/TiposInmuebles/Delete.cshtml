@model Inmobiliaria_Zarate_DoNet.Models.TipoInmueble
@{
    ViewData["Title"] = "Eliminar Tipo de Inmueble";
}
<h2>@ViewData["Title"]</h2>

<div class="alert alert-danger">
    ¿Seguro que desea eliminar el tipo <strong>@Model.Nombre</strong>?
</div>

<dl class="row">
    <dt class="col-sm-2">Activo</dt>
    <dd class="col-sm-10">@(Model.Activo ? "Sí" : "No")</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger" type="submit">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
