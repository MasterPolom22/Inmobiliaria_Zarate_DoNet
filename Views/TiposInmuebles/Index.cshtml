@model IEnumerable<Inmobiliaria_Zarate_DoNet.Models.TipoInmueble>
@{
    ViewData["Title"] = "Tipos de Inmuebles";
    var esAdmin = (Context.Session.GetString("UserRol") ?? "") == "ADMIN";
}
<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Tipo</a>
</p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Activo</th>
            <th>Creado</th>
            <th style="width:220px;"></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <td>@t.Nombre</td>
            <td>@(t.Activo ? "SÃ­" : "No")</td>
            <td>@t.CreadoEn.ToString("g")</td>
            <td>
                <a asp-action="Details" asp-route-id="@t.Id" class="btn btn-info btn-sm">Ver</a>
                <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-warning btn-sm">Editar</a>
                @if (esAdmin)
                {
                <a asp-action="Delete" asp-route-id="@t.Id" class="btn btn-danger btn-sm">Eliminar</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
