@model IEnumerable<Inmobiliaria_Zarate_DoNet.Models.Propietario>
@{
    ViewData["Title"] = "Propietarios";
    var esAdmin = (Context.Session.GetString("UserRol") ?? "") == "ADMIN";
}
<partial name="~/Views/Shared/_Alertas.cshtml" />

<h2>Propietarios</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo propietario</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>DNI</th>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>Tel√©fono</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var p in Model)
{
        <tr>
            <td>@p.Dni</td>
            <td>@p.Apellido</td>
            <td>@p.Nombre</td>
            <td>@p.Telefono</td>
            <td>@p.Email</td>
            <td class="text-end">
                <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-outline-secondary btn-sm">Ver</a>
                <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-outline-primary btn-sm">Editar</a>
                @if (esAdmin)
                {
                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-outline-danger btn-sm">Borrar</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }