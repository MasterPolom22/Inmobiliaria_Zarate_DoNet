@model Inmobiliaria_Zarate_DoNet.Models.Contrato
@{
    ViewData["Title"] = "Terminar contrato";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}

<form asp-action="Terminar" method="post" >
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Fecha fin efectiva</label>
        <!-- IMPORTANTE: el name debe ser "fechaFinAnticipada" para matchear el parÃ¡metro del POST -->
        <input type="date" name="fechaFinAnticipada" class="form-control" required />
        <!-- Mostrar errores de ese campo (clave = "fechaFinAnticipada") -->
        @Html.ValidationMessage("fechaFinAnticipada", null, new { @class = "text-danger" })
    </div>

    <!-- Resumen de otros errores generales -->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <button class="btn btn-danger" type="submit">Confirmar</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancelar</a>
</form>
