@model Inmobiliaria_Zarate_DoNet.Models.Contrato
@using Inmobiliaria_Zarate_DoNet.Utils  
@{
    ViewData["Title"] = "Finalizar contrato";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}

<form asp-action="Terminar" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Inmueble</label>
        <input class="form-control" value="@Model.InmuebleDireccion" disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">Inquilino</label>
        <input class="form-control" value="@($"{Model.InquilinoNombre}, {Model.InquilinoNombre}")" disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">Fecha inicio</label>
        <input class="form-control" value="@Model.FechaInicio.ToString("dd/MM/yyyy")" disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">Fecha fin original</label>
        <input class="form-control" value="@Model.FechaFinOriginal.ToString("dd/MM/yyyy")" disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">Fecha de finalizaci√≥n anticipada</label>
        <input type="date" name="fechaFinAnticipada" class="form-control" required />
        <span class="text-danger">@Html.ValidationMessage("")</span>
    </div>

    <button type="submit" class="btn btn-danger">Finalizar contrato</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancelar</a>
</form>
