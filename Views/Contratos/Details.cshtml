@model Inmobiliaria_Zarate_DoNet.Models.Contrato
@{
    ViewData["Title"] = "Detalle de contrato";
}
<partial name="~/Views/Shared/_Alertas.cshtml" />

<h2>Detalle de contrato</h2>

<dl class="row">
    <dt class="col-sm-3">Inmueble</dt><dd class="col-sm-9">@Model.InmuebleDireccion</dd>
    <dt class="col-sm-3">Inquilino</dt><dd class="col-sm-9">@Model.InquilinoNombre</dd>
    <dt class="col-sm-3">Inicio</dt><dd class="col-sm-9">@Model.FechaInicio.ToString("dd/MM/yyyy")</dd>
    <dt class="col-sm-3">Fin</dt><dd class="col-sm-9">@Model.FechaFinOriginal.ToString("dd/MM/yyyy")</dd>
    <dt class="col-sm-3">Fin anticipado</dt><dd class="col-sm-9">@((Model.FechaFinAnticipada.HasValue)? Model.FechaFinAnticipada.Value.ToString("dd/MM/yyyy") : "-")</dd>
    <dt class="col-sm-3">Monto mensual</dt><dd class="col-sm-9">@Model.MontoMensual.ToString("C")</dd>
    <dt class="col-sm-3">Estado</dt><dd class="col-sm-9">@Model.Estado</dd>
</dl>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Borrar</a>
</div>
