@model IEnumerable<Inmobiliaria_Zarate_DoNet.Models.Contrato>
@{
    ViewData["Title"] = "Contratos";
    var esAdmin = (Context.Session.GetString("UserRol") ?? "") == "ADMIN";
}
<partial name="~/Views/Shared/_Alertas.cshtml" />

<h2>Contratos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo contrato</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Num De Contrato</th>
            <th>Inquilino</th>
            <th>Inicio</th>
            <th>Fin</th>
            <th>Monto mensual</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.InquilinoNombre</td>
                <td>@c.FechaInicio.ToString("dd/MM/yyyy")</td>
                <td>@c.FechaFinOriginal.ToString("dd/MM/yyyy")</td>
                <td>@c.MontoMensual.ToString("C")</td>
                <td>@c.Estado</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-outline-secondary btn-sm">Ver</a>
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-outline-primary btn-sm">Editar</a>
                    @if (esAdmin)
                    {
                        <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-outline-danger btn-sm">Borrar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>