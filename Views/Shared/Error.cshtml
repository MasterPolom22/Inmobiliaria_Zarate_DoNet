@model Inmobiliaria_Zarate_DoNet.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<div class="container">
    <h1 class="text-danger">Se produjo un error.</h1>
    <p class="lead">Intentá nuevamente. Si persiste, contactá al administrador.</p>

    @if (Model?.ShowRequestId ?? false)
    {
        <p><strong>Código:</strong> <code>@Model.RequestId</code></p>
    }
    <p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Volver al inicio</a>
    </p>
</div>
