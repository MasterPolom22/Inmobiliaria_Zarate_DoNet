@model Inmobiliaria_Zarate_DoNet.Models.Inquilino
@{
    ViewData["Title"] = "Detalle de inquilino";
    var esAdmin = (Context.Session.GetString("UserRol") ?? "") == "ADMIN";
}
<partial name="~/Views/Shared/_Alertas.cshtml" />

<h2>Detalle de inquilino</h2>

<dl class="row">
    <dt class="col-sm-3">DNI</dt><dd class="col-sm-9">@Model.Dni</dd>
    <dt class="col-sm-3">Apellido</dt><dd class="col-sm-9">@Model.Apellido</dd>
    <dt class="col-sm-3">Nombre</dt><dd class="col-sm-9">@Model.Nombre</dd>
    <dt class="col-sm-3">Tel√©fono</dt><dd class="col-sm-9">@Model.Telefono</dd>
    <dt class="col-sm-3">Email</dt><dd class="col-sm-9">@Model.Email</dd>
</dl>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    @if (esAdmin)
    {
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Borrar</a>
    }
</div>
