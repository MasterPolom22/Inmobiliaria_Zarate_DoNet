@model Inmobiliaria_Zarate_DoNet.Models.Inquilino
@{
    ViewData["Title"] = "Eliminar inquilino";
}
<partial name="~/Views/Shared/_Alertas.cshtml" />

<h2>Eliminar inquilino</h2>
<p class="text-danger">¿Confirmás eliminar este inquilino?</p>

<dl class="row">
    <dt class="col-sm-3">DNI</dt><dd class="col-sm-9">@Model.Dni</dd>
    <dt class="col-sm-3">Apellido</dt><dd class="col-sm-9">@Model.Apellido</dd>
    <dt class="col-sm-3">Nombre</dt><dd class="col-sm-9">@Model.Nombre</dd>
</dl>

<form asp-action="Delete" method="post" >
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancelar</a>
</form>
