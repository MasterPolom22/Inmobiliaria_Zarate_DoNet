@model IEnumerable<Inmobiliaria_Zarate_DoNet.Models.Inquilino>
@using Inmobiliaria_Zarate_DoNet.Utils

@{
    var rol = Context.Session.GetString(SessionKeys.UserRol);
    ViewData["Title"] = "Inquilinos";
}

<h2>Listado de Inquilinos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Nuevo Inquilino</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>DNI</th>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>Tel√©fono</th>
            <th>Email</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Dni</td>
                <td>@i.Apellido</td>
                <td>@i.Nombre</td>
                <td>@i.Telefono</td>
                <td>@i.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@i.Id" class="btn btn-info btn-sm">Ver</a>
                    <a asp-action="Edit" asp-route-id="@i.Id" class="btn btn-warning btn-sm">Editar</a>
                    @if (rol == "ADMIN")
                    {
                        <a asp-action="Delete" asp-route-id="@i.Id" class="btn btn-danger btn-sm">Borrar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>